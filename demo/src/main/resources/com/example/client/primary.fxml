<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Pos?>

<VBox xmlns="http://javafx.com/javafx"
        prefWidth="900" prefHeight="600"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.client.PrimaryController"
      spacing="10" alignment="CENTER">
    <Label text="Smart-City" styleClass="title-label"/>
    <HBox spacing="50" alignment="TOP_CENTER">
        <VBox fx:id="parkingLotsVBox" alignment="TOP_LEFT" spacing="10">
            <Label text="Parking Lots" styleClass="section-label"/>
        </VBox>
        <VBox fx:id="powerStationsVBox" alignment="TOP_RIGHT" spacing="10">
            <Label text="Charging Stations" styleClass="section-label"/>
        </VBox>
    </HBox>
    
</VBox>
